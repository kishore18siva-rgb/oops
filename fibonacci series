package fibonacci;

public class Recursion {

    // Recursive function to calculate Fibonacci numbers
    public static int fibonacci(int n) {
        if (n <= 0) {
            return 0;
        } else if (n == 1) {
            return 1;
        } else {
            return fibonacci(n - 1) + fibonacci(n - 2);
        }
    }

    // Function to print Fibona
